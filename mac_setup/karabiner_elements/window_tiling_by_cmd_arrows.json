{
    "description": "Remap Cmd + Left/Right to Cmd + Opt + Left/Right for window snapping",
    "manipulators": [
        {
            "from": {
                "key_code": "left_arrow",
                "modifiers": { "mandatory": ["left_control"] }
            },
            "to": [
                {
                    "key_code": "left_arrow",
                    "modifiers": ["left_control", "left_option"]
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "right_arrow",
                "modifiers": { "mandatory": ["left_control"] }
            },
            "to": [
                {
                    "key_code": "right_arrow",
                    "modifiers": ["left_control", "left_option"]
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "up_arrow",
                "modifiers": { "mandatory": ["left_control"] }
            },
            "to": [
                {
                    "key_code": "up_arrow",
                    "modifiers": ["left_control", "left_option"]
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "down_arrow",
                "modifiers": { "mandatory": ["left_control"] }
            },
            "to": [
                {
                    "key_code": "left_arrow",
                    "modifiers": ["left_control", "left_option"]
                }
            ],
            "type": "basic"
        }
    ]
}