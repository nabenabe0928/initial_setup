{
    "description": "Search terminal by cmd+r",
    "manipulators": [
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "^com\\.apple\\.Terminal$"
                    ],
                    "type": "frontmost_application_if"
                }
            ],
            "from": {
                "key_code": "r",
                "modifiers": { "mandatory": ["command"] }
            },
            "to": [
                {
                    "key_code": "r",
                    "modifiers": ["control"]
                }
            ],
            "type": "basic"
        }
    ]
}