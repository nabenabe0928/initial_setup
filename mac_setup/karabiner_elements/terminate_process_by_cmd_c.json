{
    "description": "Terminate process on terminal by cmd+c & copy by cmd+shift+c",
    "manipulators": [
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "^com\\.apple\\.Terminal$"
                    ],
                    "type": "frontmost_application_if"
                }
            ],
            "from": {
                "key_code": "c",
                "modifiers": { "mandatory": ["command", "shift"] }
            },
            "to": [
                {
                    "key_code": "c",
                    "modifiers": ["command"]
                }
            ],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "^com\\.apple\\.Terminal$"
                    ],
                    "type": "frontmost_application_if"
                }
            ],
            "from": {
                "key_code": "c",
                "modifiers": { "mandatory": ["command"] }
            },
            "to": [
                {
                    "key_code": "c",
                    "modifiers": ["control"]
                }
            ],
            "type": "basic"
        }
    ]
}